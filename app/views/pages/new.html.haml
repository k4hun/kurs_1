.hero-unit
  %h1 New page

  = form_for(:page, :url => { :action => "create", :category_id => @category.id }) do |f| 
    = render(:partial => 'form', :locals => {:f => f})
    %p{:style => 'text-align: center;'}
      =f.submit(:Create, :class => 'btn btn-primary')
      = link_to("Back", { :action => "index", :category_id => @category.id }, :class => 'btn btn-warning')