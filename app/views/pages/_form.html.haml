%table.table.striped
  %tr
    %th= f.label(:category_id, 'Category')
    %td= f.select(:category_id, @cat.map{|x| [x.name, x.id]}, :class => 'form-control')
  %tr
    %th= f.label(:name)
    %td= f.text_field(:name, :class => 'form-control')
  %tr
    %th= f.label(:position)
    %td= f.select(:position, 1..@counter, :class => 'form-control')
  %tr
    %th= f.label(:is_visible)
    %td= f.check_box(:visible)