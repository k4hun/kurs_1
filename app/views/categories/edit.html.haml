.hero-unit
  %h1= @category.name
  = form_for(:category, :url => { :action => "update", :id => @category.id }) do |f| 
    = render(:partial => 'form', :locals => {:f => f})
    %p{:style => 'text-align: center;'}
      = f.submit(:Update, :class => 'btn btn-primary')
      = link_to("Back", { :action => "index" }, :class => 'btn btn-warning')