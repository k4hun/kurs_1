.hero-unit 
  %h1= @category.name

  %table.table.striped
    %tr
      %th Name
      %td= @category.name
    %tr
      %th Position
      %td= @category.position
    %tr
      %th Is visible
      %td= @category.visible ? "Yes" : "No"
    %tr
      %th Created at
      %td= @category.created_at
    %tr
      %th Updated at
      %td= @category.updated_at
  %p{:style => 'text-align: center;'}= link_to("Back", { :action => "index" }, :class => 'btn btn-primary')