.hero-unit
%h1 New article

= form_for(:article, :url => { :action => "create", :page_id => @page.id }) do |f| 
  = render(:partial => 'form', :locals => {:f => f})
  %p{:style => 'text-align: center;'}
    =f.submit(:Create, :class => 'btn btn-primary')
    = link_to("Back", { :action => "index", :page_id => @page.id }, :class => 'btn btn-warning')